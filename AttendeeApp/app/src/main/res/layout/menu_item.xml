<?xml version="1.0" encoding="utf-8"?>
<!--Contains one menu listItem view-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/list_view_borders">

    <TextView
        android:id="@+id/menu_item"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/plus"
        android:layout_marginStart="10dp"
        android:text="MenuItem"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/menu_item_price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/plus"
        android:layout_alignParentEnd="true"
        android:text="ItemPrice"
        android:textColor="#000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="@string/plusBtn"
        android:textColor="#000"
        android:textSize="20sp" />

</RelativeLayout>